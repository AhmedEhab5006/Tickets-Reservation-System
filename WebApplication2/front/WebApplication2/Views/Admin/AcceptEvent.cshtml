@{
    ViewData["Title"] = "Accept Event";
}
<h2>Accept Event</h2>
<form method="post">
    <label for="eventId">Event ID:</label>
    <input type="number" name="eventId" id="eventId" required />
    <button type="submit">Accept Event</button>
</form>
@if (ViewBag.Result != null) {
    <div class="alert alert-info">@ViewBag.Result</div>
} 