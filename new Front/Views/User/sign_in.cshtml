@model LoginVM
@{
    ViewData["Title"] = "Sign In - Tickets Reservation";
}

<style>
    /* Base Styles */
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow: hidden;
        background: black;
        color: white;
    }

    /* Navigation bar */
    nav {
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 100;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 50px;
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logo {
        font-size: 28px;
        font-weight: bold;
    }

    .logo span {
        color: #ff6b6b;
    }

    .navwords {
        display: flex;
        gap: 30px;
        list-style: none;
    }

    .navwords a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
        position: relative;
    }

    .navwords a:hover {
        color: #ff6b6b;
    }

    .navwords a::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -5px;
        left: 0;
        background-color: #ff6b6b;
        transition: width 0.3s ease;
    }

    .navwords a:hover::after {
        width: 100%;
    }

    /* Hero Section */
    .hero {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 80px;
        display: flex;
        background: linear-gradient(to right, #1e1e2f, #2a2a3e);
        justify-content: center;
        align-items: flex-start;
        padding-top: 40px;
        padding-left: 20px;
        padding-right: 20px;
        padding-bottom: 20px;
    }

    .login-container {
        display: flex;
        flex-direction: row;
        width: 90%;
        max-width: 1000px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    }

    .login-image {
        flex: 1;
        background-color: #111;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .form-container {
        flex: 1;
        padding: 50px 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .form-container h2 {
        margin: 0 0 20px;
        color: #ff6b6b;
        text-align: center;
    }

    .form-container label {
        margin-top: 20px;
        font-weight: 500;
    }

    .form-container input {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: none;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .form-container input::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }

    .form-container button {
        margin-top: 30px;
        width: 100%;
        padding: 12px;
        background-color: #ff6b6b;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .form-container button:hover {
        background-color: #e05454;
    }

    .form-container .signup-link {
        text-align: center;
        margin-top: 15px;
    }

    .form-container .signup-link a {
        color: #ff6b6b;
        text-decoration: none;
        font-weight: bold;
    }

    .forgot-password {
        text-align: center;
        margin-top: 15px;
    }

    .forgot-password a {
        color: #ff6b6b;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .forgot-password a:hover {
        color: #ffa5a5;
    }

    .validation-summary-errors {
        color: #ff6b6b;
        margin-bottom: 20px;
        text-align: center;
    }

    .validation-summary-errors ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .text-danger {
        color: #ff6b6b;
        font-size: 0.9em;
        margin-top: 5px;
    }

    @@media (max-width: 768px) {
        .login-container {
            flex-direction: column;
        }
        
        nav {
            padding: 15px 20px;
        }
        
        .form-container {
            padding: 30px 20px;
        }
    }
</style>

<div class="hero">
    <div class="login-container">
        <!-- Left Side (Image) -->
        <div class="login-image">
            <img src="/images/login2.png" alt="Login Illustration" />
        </div>

        <!-- Right Side (Form) -->
        <div class="form-container">
            <h2>Sign In</h2>
            <div asp-validation-summary="All" class="validation-summary-errors"></div>
            <form asp-action="sign_in" asp-controller="User" method="post">
                <div class="form-group">
                    <label asp-for="email">Email</label>
                    <input asp-for="email" type="text" placeholder="you@example.com" required value="admin@example.com" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="password">Password</label>
                    <input asp-for="password" type="password" placeholder="••••••••" required value="Admin@123" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

                <button type="submit">Sign In</button>

                <div class="signup-link">
                    Don't have an account? <a href="/User/Register">Sign Up</a>
                    <div class="forgot-password">
                        Forgot your password? <a href="/User/Register">Click here</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add click sound effect
        const clickSound = new Audio('https://www.soundjay.com/buttons/sounds/button-16.mp3');
        
        document.querySelectorAll('button').forEach(element => {
            element.addEventListener('click', () => {
                clickSound.currentTime = 0;
                clickSound.play();
            });
        });
    </script>
}
