  @model WebApplication2.ViewModels.VendorDashboardVM
  <!DOCTYPE html>
  <html lang="en">
  <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>Vendor Event Management</title>
      <style>
          html, body {
              height: 100%;
              margin: 0;
              font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
              background: black;
              color: white;
              overflow-x: hidden;
          }

          nav {
              position: fixed;
              top: 0;
              width: 100%;
              z-index: 100;
              display: flex;
              justify-content: space-between;
              align-items: center;
              padding: 20px 50px;
              background: rgba(0, 0, 0, 0.3);
              backdrop-filter: blur(10px);
              -webkit-backdrop-filter: blur(10px);
              border-bottom: 1px solid rgba(255, 255, 255, 0.1);
          }

          .logo {
              font-size: 28px;
              font-weight: bold;
              color: white;
          }

          .logo span {
              color: #ff6b6b;
          }

          .navwords {
              display: flex;
              gap: 30px;
              list-style: none;
          }

          .navwords a {
              color: white;
              text-decoration: none;
              font-weight: 500;
              transition: color 0.3s ease;
              position: relative;
          }

          .navwords a:hover {
              color: #ff6b6b;
          }

          .navwords a::after {
              content: '';
              position: absolute;
              width: 0;
              height: 2px;
              bottom: -5px;
              left: 0;
              background-color: #ff6b6b;
              transition: width 0.3s ease;
          }

          .navwords a:hover::after {
              width: 100%;
          }

          .container {
              margin: 120px auto 40px;
              max-width: 1200px;
              background: rgba(255, 255, 255, 0.05);
              padding: 30px;
              border-radius: 20px;
              box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
              backdrop-filter: blur(10px);
              -webkit-backdrop-filter: blur(10px);
          }

          h1, h2, h3 {
              color: #ffffff;
              text-align: center;
          }

          h1 {
              color: #ff6b6b;
              margin-bottom: 30px;
          }

          .section {
              margin-bottom: 40px;
              background: linear-gradient(to right, #1e1e2f, #2a2a3e);
              padding: 25px;
              border-radius: 15px;
          }

          .form-row {
              display: flex;
              gap: 20px;
              flex-wrap: wrap;
          }

          .event-form {
              background: rgba(255, 255, 255, 0.05);
              padding: 20px;
              border-radius: 15px;
              flex: 1;
              border: 1px solid rgba(255, 255, 255, 0.1);
              box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
              transition: all 0.3s ease;
              cursor: pointer;
              min-width: 300px;
          }

          .event-form:hover {
              transform: translateY(-5px);
              box-shadow: 0 8px 25px rgba(255, 107, 107, 0.2);
          }

          .event-form h3 {
              display: flex;
              justify-content: space-between;
              align-items: center;
              margin-bottom: 20px;
              color: #ff6b6b;
              cursor: pointer;
              padding-bottom: 10px;
              border-bottom: 1px solid rgba(255, 255, 255, 0.1);
          }

          .event-form h3::after {
              content: '▼';
              font-size: 12px;
              transition: transform 0.3s ease;
          }

          .event-form.collapsed h3::after {
              transform: rotate(-90deg);
          }

          .event-form-content {
              transition: max-height 0.3s ease-out;
              overflow: hidden;
              max-height: 1000px;
          }

          .event-form.collapsed .event-form-content {
              max-height: 0;
          }

          .event-form input,
          .event-form textarea,
          .event-form select {
              width: 100%;
              padding: 12px;
              margin: 8px 0 20px;
              background: rgba(255, 255, 255, 0.1);
              color: white;
              border: 1px solid rgba(255, 255, 255, 0.2);
              border-radius: 8px;
              box-sizing: border-box;
              transition: all 0.3s ease;
          }

          .event-form input:focus,
          .event-form textarea:focus,
          .event-form select:focus {
              outline: none;
              border-color: #ff6b6b;
              box-shadow: 0 0 10px rgba(255, 107, 107, 0.2);
          }

          .button {
              background-color: #ff6b6b;
              color: white;
              border: none;
              padding: 12px 20px;
              font-size: 14px;
              cursor: pointer;
              border-radius: 8px;
              transition: all 0.3s ease;
              width: 100%;
              font-weight: bold;
          }

          .button:hover {
              background-color: #e05454;
              transform: translateY(-2px);
          }

          .button.delete {
              background-color: #dc3545;
          }

          .button.delete:hover {
              background-color: #c82333;
          }

          .button.update {
              background-color: #2196F3;
          }

          .button.update:hover {
              background-color: #1e88e5;
          }

          .nav-box {
              background: linear-gradient(to right, #1e1e2f, #2a2a3e);
              padding: 25px;
              border-radius: 15px;
              margin-top: 30px;
              box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
          }

          .nav-box h2 {
              color: #ff6b6b;
              margin-bottom: 20px;
          }

          .nav-box ul {
              list-style: none;
              padding: 0;
          }

          .nav-box li {
              margin: 12px 0;
          }

          .nav-box a {
              color: #fff;
              text-decoration: none;
              transition: color 0.3s ease;
          }

          .nav-box a:hover {
              color: #ff6b6b;
          }

          .brand {
              font-weight: bold;
              text-align: center;
              margin-top: 40px;
              font-size: 18px;
              background: linear-gradient(to right, #1e1e2f, #2a2a3e);
              padding: 20px;
              border-radius: 15px;
              box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
          }

          .active-header {
              box-shadow: 0 0 20px 5px rgba(255, 107, 107, 0.3);
          }

         {
              .form-row {
                  flex-direction: column;
              }
            
              .event-form {
                  min-width: 100%;
              }
            
              nav {
                  padding: 15px 20px;
              }
            
              .container {
                  margin: 100px 20px 40px;
                  padding: 20px;
              }
          }
      </style>
  </head>
  <body>
      <nav>
          <div class="logo">Vendor<span>Hub</span></div>
          <ul class="navwords">
              <li><a href="/Vendor/Dashboard">Dashboard</a></li>
              <li><a href="/User/SignIn">Sign In</a></li>
              <li><a href="/User/Register">Register</a></li>
          </ul>
      </nav>

      <div class="container">
          <h1>Manage Your Events</h1>
          <p style="text-align:center;">Create and manage all your exclusive events and matches.</p>

          <div class="section">
              <h2>Sports Events</h2>
              <div class="form-row">
                  @foreach (var sport in Model.SportsEvents)
                  {
                      <div class="event-form">
                          <h3>@sport.team1 vs @sport.team2</h3>
                          <div class="event-form-content">
                              <div style="display: flex; justify-content: center; gap: 20px; margin-bottom: 20px;">
                                  @if (!string.IsNullOrEmpty(sport.team1Image))
                                  {
                                      <img src="data:image/jpeg;base64,@sport.team1Image" alt="Team 1" style="width: 100px; height: 100px; object-fit: contain;" />
                                  }
                                  @if (!string.IsNullOrEmpty(sport.team2Image))
                                  {
                                      <img src="data:image/jpeg;base64,@sport.team2Image" alt="Team 2" style="width: 100px; height: 100px; object-fit: contain;" />
                                  }
                              </div>
                              <p><strong>Tournament:</strong> @sport.tournament - @sport.tournamentStage</p>
                              <p><strong>Sport:</strong> @sport.sport</p>
                              <p><strong>Date:</strong> @sport.day @sport.mounth @sport.year</p>
                              <p><strong>Location:</strong> @sport.location</p>
                              <p><strong>Available Seats:</strong> @sport.aviilableSeats</p>
                              <div style="display: flex; gap: 10px; margin-top: 20px;">
                                  <a href="@Url.Action("Update_SportEvent", "Vendor", new { id = sport.id })" class="button update">Update</a>
                                  <a href="@Url.Action("Delete_SportEvent", "Vendor", new { id = sport.id })" class="button delete">Delete</a>
                              </div>
                          </div>
                      </div>
                  }
              </div>
          </div>

          <div class="section">
              <h2>Entertainment Events</h2>
              <div class="form-row">
                  @foreach (var show in Model.EntertainmentEvents)
                  {
                      <div class="event-form">
                          <h3>@show.performerName</h3>
                          <div class="event-form-content">
                              @if (!string.IsNullOrEmpty(show.eventImage))
                              {
                                  <div style="text-align: center; margin-bottom: 20px;">
                                      <img src="data:image/jpeg;base64,@show.eventImage" alt="Event Image" style="width: 200px; height: 200px; object-fit: contain;" />
                                  </div>
                              }
                              <p><strong>Genre:</strong> @show.genre</p>
                              <p><strong>Category:</strong> @show.showCategory</p>
                              <p><strong>Date:</strong> @show.day @show.mounth @show.year</p>
                              <p><strong>Location:</strong> @show.location</p>
                              <p><strong>Age Restriction:</strong> @show.ageRestriction+</p>
                              <p><strong>Duration:</strong> @show.duration hours</p>
                              <p><strong>Available Seats:</strong> @show.aviilableSeats</p>
                              <div style="display: flex; gap: 10px; margin-top: 20px;">
                                  <a href="@Url.Action("Update_EntertainmentEvent", "Vendor", new { id = show.id })" class="button update">Update</a>
                                  <a href="@Url.Action("Delete_EntertainmentEvent", "Vendor", new { id = show.id })" class="button delete">Delete</a>
                              </div>
                          </div>
                      </div>
                  }
              </div>
          </div>

          <div class="nav-box">
              <h2>Entertainment</h2>
              <ul>
                  <li><a href="/Vendor/EntertainmentEvents">Event Management</a></li>
                  <li><a href="/User/SignIn">Sign in</a></li>
                  <li><a href="/User/Register">Register</a></li>
              </ul>
          </div>

          <div class="brand">
              <strong>VEN</strong><br>
              <strong>management</strong>
          </div>
      </div>

      <audio id="clickSound" src="https://www.soundjay.com/buttons/sounds/button-16.mp3" preload="auto"></audio>

      <script>
          const clickSound = document.getElementById("clickSound");

          // Add collapsible functionality
          document.querySelectorAll('.event-form').forEach(form => {
              const header = form.querySelector('h3');
              header.addEventListener('click', (e) => {
                  // Don't toggle if clicking on a button or input
                  if (e.target.tagName === 'BUTTON' || e.target.tagName === 'INPUT' || e.target.tagName === 'SELECT' || e.target.tagName === 'TEXTAREA') {
                      return;
                  }
                  form.classList.toggle('collapsed');
              });
          });

          function highlightHeader(formElement) {
              const header = formElement.closest(".event-form").querySelector("h3");
              header.classList.add("active-header");

              setTimeout(() => {
                  header.classList.remove("active-header");
              }, 1000);
          }

          document.querySelectorAll("button").forEach(btn => {
              btn.addEventListener("click", () => {
                  clickSound.currentTime = 0;
                  clickSound.play();
                  highlightHeader(btn.closest("form"));
              });
          });

          // Form submission handlers
          document.getElementById('addEventForm').addEventListener('submit', function (e) {
              e.preventDefault();
              // Add your form submission logic here
              alert('Event added successfully!');
          });

          document.getElementById('updateEventForm').addEventListener('submit', function (e) {
              e.preventDefault();
              // Add your form submission logic here
              alert('Event updated successfully!');
          });

          document.getElementById('deleteEventForm').addEventListener('submit', function (e) {
              e.preventDefault();
              if (confirm('Are you sure you want to delete this event?')) {
                  // Add your form submission logic here
                  alert('Event deleted successfully!');
              }
          });
      </script>
  </body>
  </html>
