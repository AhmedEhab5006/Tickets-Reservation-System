@model WebApplication2.ViewModels.SportEventVM
@{
    ViewData["Title"] = "Add Sports Event";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Sports Event</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: black;
            color: white;
        }

        nav {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 100;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 50px;
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .logo {
            font-size: 28px;
            font-weight: bold;
            color: white;
        }

        .logo span {
            color: #ff6b6b;
        }

        .navwords {
            display: flex;
            gap: 30px;
            list-style: none;
        }

        .navwords a {
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .navwords a:hover {
            color: #ff6b6b;
        }

        .container {
            margin: 120px auto 40px;
            max-width: 800px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        h1 {
            color: #ff6b6b;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #ffffff;
        }

        input[type="text"],
        input[type="number"],
        input[type="datetime-local"] {
            width: 100%;
            padding: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.05);
            color: white;
            font-size: 16px;
        }

        input[type="file"] {
            width: 100%;
            padding: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.05);
            color: white;
        }

        .team-images {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .team-image-preview {
            width: 100%;
            height: 200px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .team-image-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        .submit-button {
            background-color: #ff6b6b;
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .submit-button:hover {
            background-color: #e55b5b;
        }

        .text-danger {
            color: #ff6b6b;
            font-size: 14px;
            margin-top: 5px;
        }

        @@media (max-width: 768px) {
            .container {
                margin: 100px 20px 40px;
                padding: 20px;
            }

            nav {
                padding: 15px 20px;
            }

            .team-images {
                grid-template-columns: 1fr;
            }
        }

        .date-time-inputs {
            display: flex;
            gap: 20px;
            margin-bottom: 10px;
            flex-wrap: wrap;
        }

        .date-inputs, .time-inputs {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .input-group {
            display: flex;
            flex-direction: column;
            min-width: 120px;
        }

        .input-group select {
            padding: 8px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.05);
            color: white;
            font-size: 16px;
        }

        .input-group input {
            padding: 8px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.05);
            color: white;
            font-size: 16px;
        }

        .input-group label {
            font-size: 0.9em;
            margin-bottom: 5px;
            color: #ffffff;
        }
    </style>
</head>
<body>
    <nav>
        <div class="logo">Vendor<span>Hub</span></div>
        <ul class="navwords">
            <li><a href="@Url.Action("Dashboard", "Vendor")">Dashboard</a></li>
            <li><a href="@Url.Action("Profile", "User")">Profile</a></li>
            <li><a href="@Url.Action("SignOut", "User")">Sign Out</a></li>
        </ul>
    </nav>

    <div class="container">
        <h1>Add Sports Event</h1>

        <form asp-action="AddSportEvent" asp-controller="Vendor" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="date">Event Date and Time</label>
                <input asp-for="date" type="datetime-local" class="form-control" required />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="location">Location</label>
                <input asp-for="location" />
                <span asp-validation-for="location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="numberOfSeats">Number of Seats</label>
                <input asp-for="numberOfSeats" type="number" min="5000" max="200000" />
                <span asp-validation-for="numberOfSeats" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="team1">Team 1 Name</label>
                <input asp-for="team1" />
                <span asp-validation-for="team1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="team1Image_upload">Team 1 Image</label>
                <input asp-for="team1Image_upload" type="file" accept="image/*" onchange="previewImage(this, 'team1Preview')" />
                <span asp-validation-for="team1Image_upload" class="text-danger"></span>
                <div id="team1Preview" class="team-image-preview"></div>
            </div>

            <div class="form-group">
                <label asp-for="team2">Team 2 Name</label>
                <input asp-for="team2" />
                <span asp-validation-for="team2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="team2Image_upload">Team 2 Image</label>
                <input asp-for="team2Image_upload" type="file" accept="image/*" onchange="previewImage(this, 'team2Preview')" />
                <span asp-validation-for="team2Image_upload" class="text-danger"></span>
                <div id="team2Preview" class="team-image-preview"></div>
            </div>

            <div class="form-group">
                <label asp-for="tournament">Tournament Name</label>
                <input asp-for="tournament" />
                <span asp-validation-for="tournament" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="sport">Sport Type</label>
                <input asp-for="sport" />
                <span asp-validation-for="sport" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="tournamentStage">Tournament Stage</label>
                <input asp-for="tournamentStage" />
                <span asp-validation-for="tournamentStage" class="text-danger"></span>
            </div>

            <button type="submit" class="submit-button">Add Event</button>
        </form>
    </div>

    <script>
        function previewImage(input, previewId) {
            const preview = document.getElementById(previewId);
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.innerHTML = `<img src="${e.target.result}" alt="Preview">`;
                }
                reader.readAsDataURL(input.files[0]);
            } else {
                preview.innerHTML = '';
            }
        }

        // Function to fill form with test data
        function fillTestData() {
            // Set date and time (24 hours from now)
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            tomorrow.setHours(tomorrow.getHours() + 1);

            document.querySelector('[name="date"]').value = tomorrow.toISOString().split('T')[0] + 'T' + tomorrow.toISOString().split('T')[1];

            // Fill other fields with test data
            document.querySelector('[name="location"]').value = "Cairo International Stadium";
            document.querySelector('[name="numberOfSeats"]').value = "50000";
            document.querySelector('[name="team1"]').value = "Al Ahly";
            document.querySelector('[name="team2"]').value = "Zamalek";
            document.querySelector('[name="tournament"]').value = "Egyptian Premier League";
            document.querySelector('[name="sport"]').value = "Football";
            document.querySelector('[name="tournamentStage"]').value = "Semi-Final";

            // Create test image files
            createTestImage('team1Image_upload', 'team1Preview', 'Al Ahly');
            createTestImage('team2Image_upload', 'team2Preview', 'Zamalek');
        }

        // Function to create a test image
        function createTestImage(inputName, previewId, teamName) {
            const canvas = document.createElement('canvas');
            canvas.width = 200;
            canvas.height = 200;
            const ctx = canvas.getContext('2d');

            // Draw background
            ctx.fillStyle = '#1a1a1a';
            ctx.fillRect(0, 0, 200, 200);

            // Draw team name
            ctx.fillStyle = '#ffffff';
            ctx.font = 'bold 24px Arial';
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';
            ctx.fillText(teamName, 100, 100);

            // Convert canvas to blob
            canvas.toBlob(function(blob) {
                const file = new File([blob], `${teamName.toLowerCase().replace(' ', '_')}.png`, { type: 'image/png' });
                
                // Create a new FileList-like object
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(file);

                // Set the file input's files
                const input = document.querySelector(`[name="${inputName}"]`);
                input.files = dataTransfer.files;

                // Trigger the preview
                previewImage(input, previewId);
            }, 'image/png');
        }

        // Add test data button
        const testDataButton = document.createElement('button');
        testDataButton.type = 'button';
        testDataButton.className = 'test-data-button';
        testDataButton.textContent = 'Fill Test Data';
        testDataButton.onclick = fillTestData;
        document.querySelector('.container').insertBefore(testDataButton, document.querySelector('form'));

        // Add styles for the test data button
        const style = document.createElement('style');
        style.textContent = `
            .test-data-button {
                background-color: #4CAF50;
                color: white;
                border: none;
                padding: 10px 20px;
                border-radius: 8px;
                cursor: pointer;
                font-size: 16px;
                margin-bottom: 20px;
                width: 100%;
                transition: background-color 0.3s ease;
            }

            .test-data-button:hover {
                background-color: #45a049;
            }

            .date-time-inputs {
                display: flex;
                gap: 20px;
                margin-bottom: 10px;
                flex-wrap: wrap;
            }

            .date-inputs, .time-inputs {
                display: flex;
                gap: 10px;
                flex-wrap: wrap;
            }

            .input-group {
                display: flex;
                flex-direction: column;
                min-width: 120px;
            }

            .input-group select {
                padding: 8px;
                border: 1px solid rgba(255, 255, 255, 0.1);
                border-radius: 8px;
                background: rgba(255, 255, 255, 0.05);
                color: white;
                font-size: 16px;
            }

            .input-group input {
                padding: 8px;
                border: 1px solid rgba(255, 255, 255, 0.1);
                border-radius: 8px;
                background: rgba(255, 255, 255, 0.05);
                color: white;
                font-size: 16px;
            }

            .input-group label {
                font-size: 0.9em;
                margin-bottom: 5px;
                color: #ffffff;
            }

            @@media (max-width: 768px) {
                .date-time-inputs {
                    flex-direction: column;
                }
                
                .date-inputs, .time-inputs {
                    width: 100%;
                }
                
                .input-group {
                    flex: 1;
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>